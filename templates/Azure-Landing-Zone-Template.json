{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
       "managementGroupName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Management Group to create."
            }
        },
        "subscriptionName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Subscription to create."
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location to deploy resources."
            }
        }
    },
    "variables": {
        "vnetName": "landingZoneVnet",
        "subnetName": "default",
        "rgName": "landingZoneRg",
        "monitorName": "monitoring",
        "securityCenterName": "securityCenter"
    
    },     
  "resources": [
    {
        "type": "Microsoft.Management/managementGroups",
        "apiVersion": "2020-05-01",
        "name": "[parameters('managementGroupName')]",
        "properties": {
        "displayName": "[parameters('managementGroupName')]",
        "details": {
            "description": "Management Group for the Azure Landing Zone."
            }
        }
    },
    {
        "type": "Microsoft.Resources/subscriptions",
        "apiVersion": "2019-11-01",
        "name": "[parameters('subscriptionName')]",
        "location": "[parameters('location')]",
        "properties": {
            "displayName": "[parameters('subscriptionName')]"
        },
        "dependsOn": [
            "[resourceId('Microsoft.Management/managementGroups', parameters('managementGroupName'))]"
        ]
    },
    {
        "type": "Microsoft.Resources/resourceGroups",
        "apiVersion": "2021-04-01",
        "name": "[variables('rgName')]",
        "location": "[parameters('location')]",
        "properties": {
            "managedBy": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('managementGroupName'))]"
        }
    },
    {
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2021-02-01",
        "name": "[variables('vnetName')]",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Resources/resourceGroups', variables('rgName'))]"
        ],
        "properties": {
            "addressSpace": {
                "addressPrefixes": [
                    "10.0.0.0/16"
                ]
              },
              "subnets": [
                  {
                    "name": "[variables('subnetName')]",
                    "properties": {
                        "addressPrefix": "10.0.0.0/24"
                    }
                  }
              ]
          }
      }
  ]
}
